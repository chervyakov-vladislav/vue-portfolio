include ./pug/layout/mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title main page
  body
    .wrapper

      .welcome-section

        section.fullscreen-section.hello
          .container.hello__container
            include ./pug/components/hello/header.pug
            include ./pug/components/hello/content.pug
            include ./pug/components/hello/scroll.pug

        section.about
          .container
            include ./pug/components/about/about.pug
          include ./pug/components/about/triangles.pug

      section.skills
        .container
          include ./pug/components/skills/description.pug
          include ./pug/components/skills/skills-list.pug

      section.works
        .container
          h2.works__title Мои работы
          .works__content
            include ./pug/components/works/slider.pug

      .budda-section
        svg.triangles__budda(viewBox="0 0 1000 100" preserveAspectRatio="none")
          polygon(points="0,0 500,100 1000,0")
        .container
          section.reviews
            include ./pug/components/reviews/reviews.pug
          section.form