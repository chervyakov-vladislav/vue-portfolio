.webcite-link {
  color: $links-color;
  font-weight: 700;
  font-size: 18px;
  display: inline-flex;
  align-items: center;
  max-width: 220px;
  transition: .3s;

    &:hover {
      opacity: .7;
    }
}

.webcite-link__icon {
  width: 20px;
  height: 20px;
  fill: $links-color;
  margin-right: 10px;
}

.webcite-link__text {
  display: block;
}