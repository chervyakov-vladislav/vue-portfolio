mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin circle(size, radius, strokeWidth=5, strokeColor,className)
  svg(height=`${size}` width=`${size}` viewBox=`0 0 ${size} ${size}` class=className preserveAspectRatio="none")
    circle(cx=`${(size)/2}` cy=`${(size)/2}` r=`${radius}` stroke=`#e9e9e9` stroke-width=`${strokeWidth}` fill='transparent')
    circle(cx=`${(size)/2}` cy=`${(size)/2}` r=`${radius}` ref="color-circle" stroke="url(#grad1)" stroke-width=`${strokeWidth+10}` fill='transparent' stroke-dasharray= `${radius*2*3.14}` stroke-dashoffset= `${(radius*2*3.14)}`)
    linearGradient#grad1(x1='0%' y1='0%' x2='100%' y2='0%')
      stop(offset='0%' style='stop-color:rgb(147,0,232);stop-opacity:1')
      stop(offset='100%' style='stop-color:rgb(74,0,237);stop-opacity:1')